@model IEnumerable<GamerInfo.Data.SaveData>

<p>
    @Html.ActionLink("Add new Save File", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SaveTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaveInformation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCurrentSave)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SaveTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SaveInformation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCurrentSave)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SaveID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SaveID })
        </td>
    </tr>
}

</table>
